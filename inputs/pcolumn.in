<comment>
problem = plasma column 

<job>
problem_id = PlasmaColumn_fixedboundary 

<parthenon/mesh>
refinement = none
nghost = 4

nx1 = 128 
x1min = -1.0
x1max = 1.0
ix1_bc = periodic 
ox1_bc = periodic

nx2 = 128
x2min = -1.0
x2max = 1.0
ix2_bc = periodic 
ox2_bc = periodic 

nx3 = 128
x3min = 0.0
x3max = 4.0 
ix3_bc = CustomX3
ox3_bc = outflow

pack_size = -1      # number of MeshBlock per MeshBlockPack

<parthenon/meshblock>
nx1=64
nx2=64
nx3=64

<parthenon/time>
integrator = vl2
cfl = 0.20
tlim = 2.0
nlim = 100000
#ncycle_out_mesh = -500  # print mesh structure every 500 cyles and on refinement


<hydro>
fluid = glmmhd
eos = adiabatic
riemann = hlle
reconstruction = plm
gamma = 1.666666666666667 # gamma = C_p/C_v
first_order_flux_correct = true 
glmmhd_source = dedner_plain
glmmhd_alpha = 0.4

<refinement>
type                         = maxdensity
maxdensity_refine_above      = 1e-4        # in code units
maxdensity_deref_below       = 5e-5        # in code units

<problem/PlasmaColumn_fixedboundary>
rad = 0.4
amp = 1.0e-3
vflow = 1.0e-3
iprob = 1
drat = 4.0

<parthenon/output0>
file_type = hdf5
dt = 0.25
variables = prim
id = prim
single_precision_output = true
hdf5_compression_level = 5

<parthenon/output2>
file_type = rst
dt = 0.5
id = restart
hdf5_compression_level = 8
